{
    "manifest_version": 3,
    "name": "Salesforce Multi-Account Login",
    "version": "1.0",
    "description": "Allows quick login to Salesforce with multiple stored accounts.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*.salesforce.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
